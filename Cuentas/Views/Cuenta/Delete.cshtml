@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Delete";
}

<div class="container cuentas-container">
    <div class="page-header">
        <div>
            <h1 class="page-title"><i class="bi bi-trash-fill me-2" style="color:#dc2626;"></i> Eliminar cuenta</h1>
            <div class="page-sub">Confirma si deseas eliminar permanentemente esta cuenta</div>
        </div>
        <div class="header-actions">
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
        </div>
    </div>

    <div class="table-card">
        <h5>Detalles</h5>
        <dl class="row">
            <dt class="col-sm-3">Número</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.numero)</dd>
            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.descripcion)</dd>
            <dt class="col-sm-3">Balance</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.balance)</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-delete"><i class="bi bi-trash"></i> Confirmar eliminación</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        </form>
    </div>
</div>