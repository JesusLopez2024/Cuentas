@model Cuentas.Models.Cuenta

@{
    ViewData["Title"] = "Details";
}

<div class="container cuentas-container">
    <div class="page-header">
        <div>
            <h1 class="page-title"><i class="bi bi-info-circle-fill me-2" style="color:#1e90ff;"></i> Detalles de la cuenta</h1>
            <div class="page-sub">Información completa de la cuenta</div>
        </div>
        <div class="header-actions">
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
        </div>
    </div>

    <div class="table-card">
        <dl class="row">
            <dt class="col-sm-3">Número</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.numero)</dd>

            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.descripcion)</dd>

            <dt class="col-sm-3">Créditos</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.creditos)</dd>

            <dt class="col-sm-3">Débitos</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.debitos)</dd>

            <dt class="col-sm-3">Balance</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.balance)</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.balance < 0)
                {
                    <span class="estado inactivo">Inactivo</span>
                }
                else
                {
                    <span class="estado activo">Activo</span>
                }
            </dd>
        </dl>

        <div class="mt-3 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit"><i class="bi bi-pencil-square"></i> Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-delete"><i class="bi bi-trash"></i> Delete</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>